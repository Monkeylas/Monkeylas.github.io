      width: 100%;
      text-align: center;
      animation: fadeIn 0.6s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    h1 {
      color: #0d47a1;
      margin-bottom: 30px;
    }

    .question {
      font-size: 22px;
      color: #333;
      margin-bottom: 30px;
    }

    .btn {
      background-color: #1976d2;
      color: white;
      border: none;
