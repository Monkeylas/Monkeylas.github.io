<body>
  <div class="container">
    <h1>Finde deine perfekte Sportart üèÉ‚Äç‚ôÄÔ∏è‚öΩ</h1>
    <div id="flow">
      <div class="question" id="questionText">Willst du lieber in der Gruppe oder allein Sport machen?</div>
      <button class="btn" onclick="next('team')">In der Gruppe</button>
      <button class="btn" onclick="next('solo')">Allein</button>
    </div>
    <div id="result" style="display:none;"></div>
    <button class="btn" style="display:none;" id="restart" onclick="restart()">üîÅ Neustart</button>
  </div>

  <script>
    const questions = [
      {
        text: "Willst du lieber in der Gruppe oder allein Sport machen?",
        options: { team: "In der Gruppe", solo: "Allein" }
      },
      {
        text: "Was motiviert dich beim Sport?",
        options: { team: "Spa√ü mit Freunden & Wettkampf", solo: "Fitness & Entspannung" }
      },
      {
        text: "Wie wichtig ist Kommunikation beim Sport f√ºr dich?",
        options: { team: "Sehr wichtig", solo: "Nicht so wichtig" }
      },
      {
        text: "Wie ist deine Zeiteinteilung?",
        options: { team: "Ich kann zu festen Trainingszeiten", solo: "Ich brauche Flexibilit√§t" }
      },
      {
        text: "Welche Art Ziel findest du besser?",
        options: { team: "Teamerfolg", solo: "Pers√∂nliche Ziele" }
      },
      {
        text: "Welche Beschreibung passt besser zu dir?",
        options: { team: "Teamf√§hig & kontaktfreudig", solo: "Eigenst√§ndig & zielorientiert" }
      }
    ];

    let currentQuestion = 0;
    let teamPoints = 0;
    let soloPoints = 0;

    function next(choice) {
      if (choice === "team") teamPoints++;
      if (choice === "solo") soloPoints++;

      currentQuestion++;
      if (currentQuestion < questions.length) {
        document.getElementById("questionText").innerText = questions[currentQuestion].text;
        const buttons = document.querySelectorAll(".btn");
        buttons[0].innerText = questions[currentQuestion].options.team;
        buttons[1].innerText = questions[currentQuestion].options.solo;
      } else {
        showResult();
      }
    }

    function showResult() {
      document.getElementById("flow").style.display = "none";
      document.getElementById("restart").style.display = "inline-block";
      let resultText = teamPoints > soloPoints
        ? "‚ú® Du bist wie gemacht f√ºr **Teamsportarten** wie Fu√üball, Volleyball oder Basketball! ‚öΩüèêüèÄ"
        : "üåø Du passt perfekt zu **Individualsportarten** wie Joggen, Yoga oder Radfahren! üßòüö¥üèÉ";
      document.getElementById("result").innerHTML = resultText;
      document.getElementById("result").style.display = "block";
    }

    function restart() {
      currentQuestion = 0;
      teamPoints = 0;
      soloPoints = 0;
      document.getElementById("flow").style.display = "block";
      document.getElementById("restart").style.display = "none";
      document.getElementById("result").style.display = "none";
      document.getElementById("questionText").innerText = questions[0].text;
      const buttons = document.querySelectorAll(".btn");
      buttons[0].innerText = questions[0].options.team;
      buttons[1].innerText = questions[0].options.solo;
    }
  </script>
</body>
