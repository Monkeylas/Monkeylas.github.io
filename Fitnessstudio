<title>Finde deine Sportart</title>
<style>
body{
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(135deg,#b5e0ff 0%,#dffdff 100%);
    margin:0;
    display:flex;
    justify-content:center;
    align-items:center;
    min-height:100vh;
}
.container{
    background:#fff;
    padding:2rem;
    border-radius:12px;
    box-shadow:0 8px 20px rgba(0,0,0,.15);
    max-width:600px;
    width:90%;
}
h1{
    text-align:center;
    margin-top:0;
}
.question{
    margin:1.5rem 0;
    font-weight:600;
}
.options{
    display:flex;
    flex-direction:column;
    gap:.8rem;
}
button.option{
    padding:.75rem 1rem;
    border:2px solid #0077c8;
    border-radius:8px;
    background:#f0f9ff;
    cursor:pointer;
    font-size:1rem;
    transition:background .2s,color .2s;
}
button.option:hover{
    background:#0077c8;
    color:#fff;
}
#result{
    display:none;
    text-align:center;
}
.progress{
    height:8px;
    background:#e5e5e5;
    border-radius:4px;
    overflow:hidden;
    margin-top:1rem;
}
.progress-bar{
    height:100%;
    width:0;
    background:#0077c8;
    transition:width .3s;
}
button.restart{
    margin-top:1.5rem;
    padding:.6rem 1.2rem;
    background:#0077c8;
    color:#fff;
    border:none;
    border-radius:8px;
    cursor:pointer;
    font-size:1rem;
}
