<body>
<div class="container">
<h1>Welche Sportart passt zu dir?</h1>
<div id="quiz">
    <div class="question" id="question-text"></div>
    <div class="options" id="options"></div>
    <div class="progress"><div class="progress-bar" id="progress-bar"></div></div>
</div>
<div id="result">
    <h2>Dein Ergebnis:</h2>
    <p id="sport-suggestion"></p>
    <button class="restart" onclick="restart()">Neu starten</button>
</div>
</div>
<script>
const questions = [
{
    text:"Motivation & Ziele: Was motiviert dich am meisten?",
    options:["Abnehmen","Muskeln stärken","Entspannung","Wettkampf","Soziale Kontakte"]
},
{
    text:"Team vs. Einzel: Wie möchtest du trainieren?",
    options:["Im Team","Allein"]
},
{
    text:"Alte Erfahrungen: Welche dieser Aktivitäten hat dir früher Spaß gemacht?",
    options:["Ballsport","Radfahren","Schwimmen","Turnen/Yoga","Keine spezielle"]
},
{
    text:"Zeit & Flexibilität: Kannst du regelmäßig zu festen Zeiten trainieren?",
    options:["Ja","Nein"]
},
{
    text:"Gesundheit/Alter: Wie schätzt du deine körperlichen Voraussetzungen ein?",
    options:["Keine Einschränkungen","Leichte Einschränkungen","Größere Einschränkungen"]
},
{
    text:"Spaß: Was macht dir am meisten Spaß beim Sport?",
    options:["Taktik & Spiel","Ausdauer","Kraft","Koordination","Ruhe & Balance"]
},
{
    text:"Bewegungen: Welche Bewegungstypen bevorzugst du?",
    options:["Laufen/Springen","Radfahren","Wasser","Körpergewicht/Dehnen","Wurf/Ziel"]
}
];

let current = 0;
const answers = [];
const qText = document.getElementById('question-text');
const optsDiv = document.getElementById('options');
const progressBar = document.getElementById('progress-bar');

function loadQuestion(){
    const q = questions[current];
    qText.textContent = q.text;
    optsDiv.innerHTML = '';
    q.options.forEach((opt,i)=>{
        const btn = document.createElement('button');
        btn.className='option';
        btn.textContent = opt;
        btn.onclick = ()=>selectOption(i);
        optsDiv.appendChild(btn);
    });
    progressBar.style.width = (current/questions.length)*100 + '%';
}

function selectOption(choice){
    answers[current] = choice;
    current++;
    if(current < questions.length){
        loadQuestion();
    }else{
        showResult();
    }
}

function showResult(){
    document.getElementById('quiz').style.display='none';
    document.getElementById('result').style.display='block';
    document.getElementById('sport-suggestion').textContent = determineSport();
    progressBar.style.width = '100%';
}

function restart(){
    current = 0;
    answers.length = 0;
    document.getElementById('result').style.display='none';
    document.getElementById('quiz').style.display='block';
    loadQuestion();
}

function determineSport(){
    const motivation = answers[0];
    const teamPref = answers[1];
    const move = answers[6];
    if(teamPref === 0){ // Team
        if(motivation === 3) return "Fußball oder Basketball – dein Fokus liegt auf Wettkampf & Teamgeist.";
        if(move === 0) return "Volleyball – dynamischer Teamsport mit Spaßfaktor.";
        return "Handball oder Hockey – schnelle Spiele im Team.";
    }else{ // Individual
        if(move === 1) return "Radfahren – perfekt für Ausdauertraining allein.";
        if(move === 2) return "Schwimmen – gelenkschonend und flexibel.";
        if(move === 3) return "Yoga oder Pilates – Ruhe, Dehnung & Balance.";
        if(move === 0) return "Joggen/Laufen – unkompliziert und überall möglich.";
        return "Fitness/Krafttraining – zielorientiertes Individualtraining.";
    }
}

loadQuestion();
</script>
</body>
</html>
